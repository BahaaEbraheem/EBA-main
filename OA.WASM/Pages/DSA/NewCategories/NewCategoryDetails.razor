

@using OA.Domin.DSA
@inherits NewCategoryDetailsBase
@page "/NewCategory/Details/{id}"

<div class="page-title mb-5">
    @Localizer["New Category"] @Localizer["Details"]
</div>


<DetailItem EntityType="typeof(NewCategory)" PropName="Name" Value="@EntityItem.Name" />

<DetailItem EntityType="typeof(NewCategory)" PropName="Order" Value="@EntityItem.Order.ToString()" />

<DetailItem EntityType="typeof(NewCategory)" PropName="Descreption" Value="@EntityItem.Descreption" />

<DetailItem EntityType="typeof(NewCategory)" PropName="IsActive" Value="@EntityItem.IsActive.ToString()" />

<DetailItem EntityType="typeof(NewCategory)" PropName="ImagePath" Value="@EntityItem.ImagePath" />

<div class="row mt-3">
    <div class="col-md-6">
        <img src="@($"{PathPrefix}{EntityItem.ImagePath}")" class="doc-preview-image" />
    </div>
</div>

<Btn ClassList="btn-sm btn-comp-s" Text="Back To List" ClickCallBack="@(() => NavigationManager.NavigateTo("/NewCategories/List"))" />

<Btn ClassList="btn-sm btn-comp-s" Text="Edit" ClickCallBack="@(() => NavigationManager.NavigateTo($"/NewCategory/Edit/{EntityItem.Id}"))" />



