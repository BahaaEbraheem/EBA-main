@using OA.WASM.Pages.DSA
@using OA.Domin.DSA

@inherits COM_ADMBase
@page "/COM_ADM"
@attribute [Authorize(Policy = "COM_ADM-control")]

<EditForm Model="Commission_admini_VM" OnValidSubmit="HandelSubmit">

    <FluentValidationValidator />


    <input type="hidden" @bind-value="CommissionMember.Id" />

    <div class="form-group row">
        <div class="col-sm-10">
            <MInputText @bind-Value="Commission_admini_VM.Commission.Name" For="@(() => Commission_admini_VM.Commission.Name)" Label="Commission Name" Id="Name" Active="active" />
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <CheckBoxList @ref="RolesChecks" Selected="SelectedRoles"></CheckBoxList>
        </div>
    </div>


    <SubmitBtn Text="Create" Busy="CreateBusy" />

</EditForm>

