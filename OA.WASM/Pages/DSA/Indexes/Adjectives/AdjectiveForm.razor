@using OA.Domin.DSA.Indexes


<div class="form-group row">


    <div class="col-sm-6">
        <MInputText @bind-Value="Adjective.Name" For="@(() => Adjective.Name)" Id="Name" EntityType="typeof(Adjective)" PropName="Name" Active="@Active" />
    </div>
    <div class="col-sm-6">
        <MInputText @bind-Value="Adjective.Name_En" For="@(() => Adjective.Name_En)" Id="Name_En" EntityType="typeof(Adjective)" PropName="Name_En" Active="@Active" />
    </div>
</div>
<div class="form-group row">
    <div class="col-sm-12">
        <MInputText @bind-Value="Adjective.Description" For="@(() => Adjective.Description)" Id="Description" EntityType="typeof(Adjective)" PropName="Description" Active="@Active" />
    </div>
</div>

