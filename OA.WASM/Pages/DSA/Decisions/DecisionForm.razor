@using OA.Domin.DSA
@using OA.Domin.Settings




<div class="form-group row">
    <div class="col-sm-6">
        <MInputText @bind-Value="Decision.DecisionNum" For="@(() => Decision.DecisionNum)" Id="DecisionNum" EntityType="typeof(Decision)" PropName="DecisionNum" Active="@Active" />
    </div>
    <div class="col-sm-6">
        <MInputText @bind-Value="Decision.Title" For="@(() => Decision.Title)" Id="Title" EntityType="typeof(Decision)" PropName="Title" Active="@Active" />
    </div>
</div>
    <div class="form-group row">
        <div class="col-sm-6">
            <MInputDate Type="date" @bind-Value="Decision.Date" For="@(() => Decision.Date)" Id="Date" EntityType="typeof(Decision)" PropName="Date" />
        </div>

        <div class="col-sm-6">
            <MInputText @bind-Value="Decision.Description" For="@(() => Decision.Description)" Id="Description" EntityType="typeof(Decision)" PropName="Description" Active="@Active" />
        </div>
    </div>

        <div class="form-group row mb-5">
            <div class="col-sm-12">
                <CollapseContainer Title="Page Content">
                    <RishTextEditor @bind-Value="Decision.Content" />
                </CollapseContainer>
            </div>
        </div>








