
@inherits NewCategoryCreateBase
@page "/NewCategory/Create"
@attribute [Authorize(Policy = "news-control")]

<div class="page-title mt-3 mb-4"> @Localizer["Create"] @Localizer["New Category"] </div>

<EditForm Model="EntityItem" OnValidSubmit="HandelSubmit">

    <FluentValidationValidator />

    <NewCategoryForm NewCategory="EntityItem" />

    <SubmitBtn Text="Create" Busy="CreateBusy" />

</EditForm>

<Btn ClassList="btn-sm btn-comp-s" Text="Back To List" ClickCallBack="@(() => NavigationManager.NavigateTo("/NewCategories/List"))" />