@inherits TrainingCourseTypeEditBase
@page "/TrainingCourseType/Edit/{id}"
@attribute [Authorize(Policy = "indexes-control")]

<div class="page-title mt-3 mb-4"> @Localizer["Edit"] @Localizer["TrainingCourseType"] </div>

<EditForm Model="EntityItem" OnValidSubmit="HandelSubmit">

    <FluentValidationValidator />

    <TrainingCourseTypeForm TrainingCourseType="EntityItem" IsEdit="true" />

