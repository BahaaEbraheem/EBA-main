@using OA.Domin.DSA


<div class="form-group row">


    <div class="col-sm-6">
        <MInputText @bind-Value="PType.Name" For="@(() => PType.Name)" Id="Name" EntityType="typeof(PType)" PropName="Name" Active="@Active" />
    </div>
    <div class="col-sm-6">
        <MInputText @bind-Value="PType.Name_En" For="@(() => PType.Name_En)" Id="Name_En" EntityType="typeof(PType)" PropName="Name_En" Active="@Active" />
    </div>
</div>
<div class="form-group row">
    <div class="col-sm-12">
        <MInputText @bind-Value="PType.Description" For="@(() => PType.Description)" Id="Description" EntityType="typeof(PType)" PropName="Description" Active="@Active" />
    </div>
</div>

