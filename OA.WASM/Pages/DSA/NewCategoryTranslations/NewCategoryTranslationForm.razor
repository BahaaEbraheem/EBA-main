@using OA.Domin.DSA;

<div class="form-group row">
    <div class="col-sm-6">
        <MInputText @bind-Value="NewCategoryTranslation.Name" For="@(() => NewCategoryTranslation.Name)" Id="Name" EntityType="typeof(NewCategoryTranslation)" PropName="Name" Active="@Active" />
    </div>
    <div class="col-sm-6 select-col">
        <MInputSelect @bind-Value="NewCategoryTranslation.LanguageId" For="@(() => NewCategoryTranslation.LanguageId)" Items="LanguageItems" Id="LanguageId" EntityType="typeof(NewCategoryTranslation)" PropName="LanguageId" />
    </div>
</div>
<div class="form-group row">
    @*<div class="col-sm-6">
        <MInputText @bind-Value="NewCategoryTranslation.Slug" For="@(() => NewCategoryTranslation.Slug)" Id="Slug" EntityType="typeof(NewCategoryTranslation)" PropName="Slug" Active="@Active" />
    </div>*@
    <div class="col-sm-6 select-col">
        <MInputSelect @bind-Value="NewCategoryTranslation.NewCategoryId" For="@(() => NewCategoryTranslation.NewCategoryId)" Items="NewCategoryItems" Id="NewCategoryId" EntityType="typeof(NewCategoryTranslation)" PropName="NewCategoryId" />
    </div>
</div>
<div class="form-group row">
    <div class="col-sm-12">
        <MInputText @bind-Value="NewCategoryTranslation.Description" For="@(() => NewCategoryTranslation.Description)" Id="Description" EntityType="typeof(NewCategoryTranslation)" PropName="Description" Active="@Active" />
    </div>
</div>
<div class="form-group row">
    <div class="col-sm-12">
        <CheckBoxBtn Checked="NewCategoryTranslation.IsActive" Text="Active" OnChange="@((bool value) => NewCategoryTranslation.IsActive = value)" />
    </div>
</div>
