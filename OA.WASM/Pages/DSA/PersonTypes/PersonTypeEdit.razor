@inherits PersonTypeEditBase
@page "/PersonType/Edit/{id}"
@attribute [Authorize(Policy = "people-control")]

<div class="page-title mt-3 mb-4"> @Localizer["Edit"] @Localizer["Person Type"] </div>

<EditForm Model="EntityItem" OnValidSubmit="HandelSubmit">

    <FluentValidationValidator />

    <PersonTypeForm PersonType="EntityItem" PTypeItems="PTypeItems" PersonItems="PersonItems" IsEdit="true" />

    <SubmitBtn Text="Save" Busy="EditBusy" />

</EditForm>

<Btn ClassList="btn-sm btn-comp-s" Text="Back To List" ClickCallBack="@(() => NavigationManager.NavigateTo("/PersonTypes/List"))" />